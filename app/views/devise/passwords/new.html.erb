<section class="mt-5">
  <h2 class="text-center">Forgot your password?</h2>
  <section class="flex justify-center items-center">
    <div class="mt-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="flex gap-4 items-center">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md" %>
        </div>
        <div class="mt-4 mb-4 rounded-md hover:bg-gray-300">
          <%= f.submit "Send me reset password instructions", class:"bg-cyan-500 hover:bg-cyan-600 text-white font-bold py-2 px-4 rounded hover:cursor-pointer" %>
        </div>
      <% end %>
      <div class="text-cyan-700">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </section>
</section>