<section class="mt-5">
  <h2 class="text-center">Log in</h2>
  <section class="flex justify-center items-center">
    <div class="mt-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="flex gap-4 items-center">
          <%= f.label :email, class: "w-full" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md" %>
        </div>
        <div class="flex gap-4 items-center mt-2">
          <%= f.label :password, class: "w-full" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "rounded-md" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="mt-2 mb-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="flex justify-center">
          <%= f.submit "Log in", class:"bg-cyan-500 hover:bg-cyan-600 text-white font-bold py-2 px-4 rounded hover:cursor-pointer" %>
        </div>
      <% end %>
      <span class="text-cyan-700">
        <%= render "devise/shared/links" %>
      </span>
    </div>
  </section>
</section>
