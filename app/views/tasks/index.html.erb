<p style="color: green"><%= notice %></p>
<h1>Tasks</h1>
<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", project_task_path(@project, task) %>
    </p>
    <p>
      <%= link_to "Back to project", project_path(@project) %>
    </p>
  <% end %>
</div>
<%= link_to "New task", new_project_task_path(@project) %>
