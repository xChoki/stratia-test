<header class="flex bg-gray-200 max-w-xl mx-auto h-16 rounded-md mt-4 items-center">
  <% if user_signed_in? %>
    <nav class="flex w-full md:max-w-7xl mx-auto gap-4 p-2 justify-center bg-transparent">
      <ul class="flex flex-row left-0 top-0 h-full items-center">
        <li>
          <%= link_to "Home", root_path, class: "p-2 hover:bg-gray-300 rounded-md mr-4", data: { turbolinks: false } %>
        </li>
        <li class="p-2 hover:bg-gray-300 rounded-md">
          <%= link_to "Log out", destroy_user_session_path, data: { turbolinks: false } %>
        </li>
      </ul>
    </nav>
  <% else %>
    <nav class="flex w-full md:max-w-7xl mx-auto gap-4 p-2 justify-center bg-transparent">
      <ul class="flex flex-row left-0 top-0 h-full items-center">
        <li>
          <%= link_to "Home", root_path, data: { turbolinks: false }, class: "p-2 hover:bg-gray-300 rounded-md mr-4" %>
        </li>
        <li>
          <%= link_to "Sign up", new_user_registration_path, class: "p-2 hover:bg-gray-300 rounded-md", data: { turbolinks: false } %>
        </li>
        <li>
          <%= link_to "Log in", new_user_session_path, class: "p-2 hover:bg-gray-300 rounded-md", data: { turbolinks: false } %>
        </li>
      </ul>
    </nav>
  <% end %>
</header>